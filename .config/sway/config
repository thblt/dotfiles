# Experimenting
bindcode $mod+$KC_H exec $launcher
bindcode $mod+$KC_SEMICOLON exec $term -e fish

# Move your focus around
bindsym $mod+left focus left
bindcode $mod+$KC_VLEFT focus left
bindsym $mod+down focus down
bindcode $mod+$KC_VDOWN focus down
bindsym $mod+up focus up
bindcode $mod+$KC_VUP focus up
bindsym $mod+right focus right
bindcode $mod+$KC_VRIGHT focus right
# Move the focused window with the same, but add Shift
bindsym $mod+Shift+left move left
bindcode $mod+Shift+$KC_VLEFT move left
bindsym $mod+Shift+down move down
bindcode $mod+Shift+$KC_VDOWN move down
bindsym $mod+Shift+up move up
bindcode $mod+Shift+$KC_VUP move up
bindsym $mod+Shift+right move right
bindcode $mod+Shift+$KC_VRIGHT move right
# Layout stuff:
#
# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindcode $mod+$KC_T splitv
bindcode $mod+$KC_B splith
# Switch the current container between different layout styles
bindcode $mod+$KC_G layout toggle tabbed splith splitv


# Make the current focus fullscreen
bindsym $mod+f11 fullscreen

# Toggle the current focus between tiling and floating mode
bindcode $mod+$KC_Y floating toggle

# Swap focus between the tiling area and the floating area bindcode
bindcode $mod+$KC_N focus mode_toggle

# Move focus to the parent container
bindcode $mod+$KC_Q focus parent
#
# Scratchpad:
#
# Move the currently focused window to the scratchpad
bindcode $mod+$KC_P move scratchpad
bindcode $mod+$KC_SLASH scratchpad show

# Dismiss notifications
bindsym $mod+backspace exec makoctl dismiss -a

#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $mod+left resize shrink width 10px
    bindcode $mod+$KC_VLEFT resize shrink width 10px
    bindsym $mod+down resize grow height 10px
    bindcode $mod+$KC_VDOWN resize grow height 10px
    bindsym $mod+up resize shrink height 10px
    bindcode $mod+$KC_VUP resize shrink height 10px
    bindsym $mod+right resize grow width 10px
    bindcode $mod+$KC_VRIGHT resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindcode $mod+$KC_C mode "resize"

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command swaybar

    position bottom
    mode hide

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command ~/.config/sway/status_bar.sh

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #323232 #323232 #5c5c5c
    }
}

# Fixes portal issues on NixOS
include /etc/sway/config.d/*
