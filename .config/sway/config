set $KC_V 55
set $KC_B 56
set $KC_N 57
set $KC_M 58
set $KC_COMMA 59
set $KC_DOT 60
set $KC_SLASH 61

# Keypad
set $KC_KP0 90
set $KC_KP1 87
set $KC_KP2 88
set $KC_KP3 89
set $KC_KP4 83
set $KC_KP5 84
set $KC_KP6 85
set $KC_KP7 79
set $KC_KP8 80
set $KC_KP9 81

# "Virtual keypad", like the nav layer

set $KC_VKP0 $KC_H
set $KC_VKP1 $KC_J
set $KC_VKP2 $KC_K
set $KC_VKP3 $KC_L
set $KC_VKP4 $KC_M
set $KC_VKP5 $KC_COMMA
set $KC_VKP6 $KC_DOT
set $KC_VKP7 $KC_U
set $KC_VKP8 $KC_I
set $KC_VKP9 $KC_O

# Virtual arrows on the left home row
set $KC_VUP $KC_E
set $KC_VLEFT $KC_S
set $KC_VDOWN $KC_D
set $KC_VRIGHT $KC_F

bindsym $mod+F1 input * xkb_switch_layout next
# Launchers
bindcode $mod+49 exec $term -e fish # Key left of 1
bindsym $mod+return exec "emacsclient-with-feedback server"
bindsym $mod+Shift+return exec "emacsclient-with-feedback"

# Audio
bindsym XF86AudioLowerVolume exec "amixer -c 0 set Master unmute ; amixer -c 0 set Master 2-;"
bindsym XF86AudioRaiseVolume exec "amixer -c 0 set Master unmute ; amixer -c 0 set Master 2+;"
bindsym XF86AudioMute exec "amixer set Master toggle;"

# Backlight
bindsym XF86MonBrightnessUp exec "light -A 5"
bindsym Shift+XF86MonBrightnessUp exec "light -A 1"
bindsym XF86MonBrightnessDown exec "light -U 5"
bindsym Shift+XF86MonBrightnessDown exec "light -U 1"
bindsym $mod+XF86MonBrightnessUp exec "light -S 100"
bindsym $mod+XF86MonBrightnessDown exec "light -S 1"
# For some reasons, my layout doesn't emit symbols.  Here's the same binding as above, with keycodes.
bindcode 232 exec "light -U 5"
bindcode 233 exec "light -A 5"
bindcode Shift+232 exec "light -U 1"
bindcode Shift+233 exec "light -A 1"
bindcode $mod+232 exec "light -S 1"
bindcode $mod+233 exec "light -S 100"

# Eject
# @TODO Don't hardcode fuzzel, quote path to support mountpoints with spaces.
bindsym $mod+Delete exec umount /run/media/$(whoami)/$(ls --color=no /run/media/$(whoami)/ | fuzzel --dmenu --prompt \"unmount? > \")
# Printscreen
bindsym Print exec grimshot copy area
bindsym Alt+Print exec grimshot copy active
bindsym $mod+Print exec grimshot save area
bindsym $mod+Alt+Print exec grimshot save active

# Volume
bindcode 123 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindcode 122 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindcode 121 exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Kill focused window
bindcode $mod+$KC_W kill

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Lock session
bindcode $mod+$KC_A exec swaylock -f -c 000000
# Exit sway (logs you out of your Wayland session)
bindcode $mod+Shift+$KC_A exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
# Reload config
bindcode $mod+$KC_Z reload

# Moving around:

# Workspaces.  Three sets of positional bindings: from num row, num
# pad and the "virtual num pad" of ergo split keyboards (number
# layer)

# for i in range(10):
#     ws = i + 1
#     key = 0 if ws == 10 else ws
#     for g in ["KC_", "KC_KP", "KC_VKP"]:
#         print(f"bindcode $mod+${g}{key} workspace {ws}")
#         print(f"bindcode $mod+Shift+${g}{key} move container to workspace {ws}")

bindcode $mod+$KC_1 workspace 1
bindcode $mod+Shift+$KC_1 move container to workspace 1
bindcode $mod+$KC_KP1 workspace 1
bindcode $mod+Shift+$KC_KP1 move container to workspace 1
bindcode $mod+$KC_VKP1 workspace 1
bindcode $mod+Shift+$KC_VKP1 move container to workspace 1
