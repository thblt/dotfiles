hide_edge_borders --i3 smart
default_border pixel

include `hostname`.config

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left b
set $down n
set $up p
set $right f

set $term "wezterm"
set $launcher "fuzzel"

font Iosevka 10

### Idle configuration

exec swayidle -w \
     timeout 600 'swaylock -f -c 000000'            \
     timeout 600 'swaymsg "output * dpms off"' \
     resume 'swaymsg "output * dpms on"' \
     before-sleep 'swaylock -f -c 000000'

exec mako
exec udiskie

### Input configuration

input "type:keyboard" {
    xkb_layout "fr,fr"
    xkb_variant "ergol,bepo"
    xkb_options "caps:ctrl_modifier"
    xkb_numlock enabled
    repeat_delay 200
    repeat_rate 60
    }

# input "4176:1031:Yubico_YubiKey_OTP+FIDO+CCID" {
#       xkb_layout "us,us,"
#       xkb_variant "intl,intl,"
# }
# All bindings are positional

#
set $KC_1 10
set $KC_2 11
set $KC_3 12
set $KC_4 13
set $KC_5 14
set $KC_6 15
